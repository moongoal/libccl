/**
 * @file
 *
 * Version specification.
 */
#ifndef CCL_VERSION_HPP
#define CCL_VERSION_HPP

#include <ccl/macros.hpp>

#define CCL_VERSION_MAJOR @PROJECT_VERSION_MAJOR@
#define CCL_VERSION_MINOR @PROJECT_VERSION_MINOR@
#define CCL_VERSION_PATCH @PROJECT_VERSION_PATCH@

#define CCL_VERSION ("v" CCL_STRINGIFY(CCL_VERSION_MAJOR) "." CCL_STRINGIFY(CCL_VERSION_MINOR) "." CCL_STRINGIFY(CCL_VERSION_PATCH))

#endif // CCL_VERSION_HPP
